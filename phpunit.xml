<?xml version="1.0" encoding="utf-8"?>

<phpunit backupGlobals="false"
         colors="true"
         stderr="true"
         bootstrap="../../tests/bootstrap.php"
  >

  <testsuites>
    <testsuite name="default">
      <directory>.</directory>
    </testsuite>
  </testsuites>

  <filter>
    <whitelist>
      <directory>.</directory>
      <exclude>
        <directory>docs</directory>
        <directory>tests</directory>
      </exclude>
    </whitelist>
  </filter>
</phpunit>
